<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <fragment
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fgListadoPedido"
        android:name="net.eoapp.obligatorioandroid.ListadoPedidosFragment"
        tools:layout="@layout/fragment_pedidos_listado"/>

    <fragment
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fgDetallePedido"
        android:name="net.eoapp.obligatorioandroid.ProductosFragment"
        tools:layout="@layout/fragment_detalle_pedido"/>

    </LinearLayout>

</RelativeLayout>